generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  name           String     @unique
  email          String     @unique
  hashedPassword String
  role           UserRole   @default(USER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  responses      Response[]
}

model Questionnaire {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime   @default(now())
  questions   Question[]
  responses   Response[]
}

model Question {
  id              Int           @id @default(autoincrement())
  questionnaireId Int
  text            String
  category        TAIIndicator
  order           Int
  answers         Answer[]
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
}

/// (User) Chen
/// │
/// └───> Response #1  ←── Questionnaire "AI System Trust"
/// │
/// ├──> Answer #1 (Q1: Reliability = 4)
/// ├──> Answer #2 (Q2: Privacy = 5)
/// └──> Report (Overall Score = 4.5)
model Response {
  id              Int           @id @default(autoincrement())
  userId          Int
  questionnaireId Int
  submittedAt     DateTime      @default(now())
  answers         Answer[]
  report          Report?
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
}

model Answer {
  id         Int      @id @default(autoincrement())
  responseId Int
  questionId Int
  value      Int
  question   Question @relation(fields: [questionId], references: [id])
  response   Response @relation(fields: [responseId], references: [id])
}

model Report {
  id           Int      @id @default(autoincrement())
  responseId   Int      @unique
  overallScore Float
  generatedAt  DateTime @default(now())
  analysisText String?
  radarData    Json
  response     Response @relation(fields: [responseId], references: [id])
}

enum UserRole {
  USER
  MODO
  ADMIN
}

enum TAIIndicator {
  ACCURACY
  RELIABILITY
  SAFETY
  RESILIENCE
  TRANSPARENCY
  ACCOUNTABILITY
  EXPLAINABILITY
  AUTONOMY
  PRIVACY
  FAIRNESS
  SECURITY
}
